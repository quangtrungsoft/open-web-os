@namespace MyDesktop.Components
@inject ISimulationEngine Engine

<h3>File Browser</h3>
<table class="file-browser">
    <thead>
        <tr>
            <th>Path</th>
            <th>Directory?</th>
            <th>Created</th>
            <th>Modified</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var entry in Engine.FileSystemManager.List("/"))
        {
            <tr>
                <td>@entry.Path</td>
                <td>@entry.IsDirectory</td>
                <td>@entry.CreatedAt</td>
                <td>@entry.ModifiedAt</td>
            </tr>
        }
    </tbody>
</table>

<div>
    <input @bind="newPath" placeholder="/filename.txt" />
    <button @onclick="CreateFile">Create File</button>
    <button @onclick="CreateDir">Create Dir</button>
</div>

@code {
    string newPath = string.Empty;

    protected override void OnInitialized()
    {
        Engine.FileSystemManager.OnFileSystemChanged += HandleFsChanged;
    }
    void HandleFsChanged(object? sender, EventArgs e)
    {
        InvokeAsync(StateHasChanged);
    }
    public void Dispose()
    {
        Engine.FileSystemManager.OnFileSystemChanged -= HandleFsChanged;
    }
    void CreateFile()
    {
        if (!string.IsNullOrWhiteSpace(newPath))
        {
            Engine.FileSystemManager.Create(newPath, false);
            newPath = string.Empty;
        }
    }
    void CreateDir()
    {
        if (!string.IsNullOrWhiteSpace(newPath))
        {
            Engine.FileSystemManager.Create(newPath, true);
            newPath = string.Empty;
        }
    }
} 