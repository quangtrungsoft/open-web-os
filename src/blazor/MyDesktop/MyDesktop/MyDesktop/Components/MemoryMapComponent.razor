@namespace MyDesktop.Components
@inject ISimulationEngine Engine

<h3>Memory Map</h3>
<table class="memory-map">
    <thead>
        <tr>
            <th>Frame</th>
            <th>Process</th>
            <th>Page</th>
            <th>Allocated</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var frame in Engine.MemoryManager.Frames)
        {
            <tr>
                <td>@frame.FrameId</td>
                <td>@(frame.ProcessId?.ToString() ?? "-")</td>
                <td>@(frame.PageNumber?.ToString() ?? "-")</td>
                <td>@frame.IsAllocated</td>
            </tr>
        }
    </tbody>
</table>

@code {
    protected override void OnInitialized()
    {
        Engine.MemoryManager.OnMemoryUpdate += HandleMemoryUpdate;
    }
    void HandleMemoryUpdate(object? sender, EventArgs e)
    {
        InvokeAsync(StateHasChanged);
    }
    public void Dispose()
    {
        Engine.MemoryManager.OnMemoryUpdate -= HandleMemoryUpdate;
    }
} 