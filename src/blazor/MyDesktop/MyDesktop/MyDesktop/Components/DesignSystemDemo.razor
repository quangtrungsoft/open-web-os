@page "/design-demo"

<div class="design-demo">
    <h1 class="text-2xl font-bold text-primary mb-6">Design System Demo</h1>
    
    <!-- Color Palette -->
    <section class="mb-8">
        <h2 class="text-xl font-semibold text-primary mb-4">Color Palette</h2>
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
            <div class="color-swatch bg-primary p-4 rounded-lg">
                <span class="text-inverse font-medium">Primary</span>
            </div>
            <div class="color-swatch bg-secondary p-4 rounded-lg">
                <span class="text-primary font-medium">Secondary</span>
            </div>
            <div class="color-swatch bg-tertiary p-4 rounded-lg">
                <span class="text-primary font-medium">Tertiary</span>
            </div>
            <div class="color-swatch bg-background p-4 rounded-lg border border-primary">
                <span class="text-primary font-medium">Background</span>
            </div>
        </div>
    </section>

    <!-- Typography -->
    <section class="mb-8">
        <h2 class="text-xl font-semibold text-primary mb-4">Typography</h2>
        <div class="space-y-2">
            <h1 class="text-5xl font-bold text-primary">Heading 1 (5xl)</h1>
            <h2 class="text-4xl font-bold text-primary">Heading 2 (4xl)</h2>
            <h3 class="text-3xl font-semibold text-primary">Heading 3 (3xl)</h3>
            <h4 class="text-2xl font-semibold text-primary">Heading 4 (2xl)</h4>
            <h5 class="text-xl font-medium text-primary">Heading 5 (xl)</h5>
            <h6 class="text-lg font-medium text-primary">Heading 6 (lg)</h6>
            <p class="text-base text-primary">Body text (base)</p>
            <p class="text-sm text-secondary">Small text (sm)</p>
            <p class="text-xs text-tertiary">Extra small text (xs)</p>
        </div>
    </section>

    <!-- Buttons -->
    <section class="mb-8">
        <h2 class="text-xl font-semibold text-primary mb-4">Buttons</h2>
        <div class="flex flex-wrap gap-4">
            <button class="btn btn-primary">Primary Button</button>
            <button class="btn btn-secondary">Secondary Button</button>
            <button class="btn btn-success">Success Button</button>
            <button class="btn btn-warning">Warning Button</button>
            <button class="btn btn-error">Error Button</button>
        </div>
    </section>

    <!-- Cards -->
    <section class="mb-8">
        <h2 class="text-xl font-semibold text-primary mb-4">Cards</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div class="card">
                <div class="card-header">
                    <h3 class="text-lg font-semibold text-primary">Card Header</h3>
                </div>
                <div class="card-body">
                    <p class="text-secondary">This is a card with header, body, and footer sections.</p>
                </div>
                <div class="card-footer">
                    <button class="btn btn-primary">Action</button>
                </div>
            </div>
            
            <div class="card">
                <div class="card-body">
                    <h3 class="text-lg font-semibold text-primary mb-2">Simple Card</h3>
                    <p class="text-secondary">A simple card without header or footer.</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Form Elements -->
    <section class="mb-8">
        <h2 class="text-xl font-semibold text-primary mb-4">Form Elements</h2>
        <div class="max-w-md space-y-4">
            <div>
                <label class="block text-sm font-medium text-primary mb-2">Input Field</label>
                <input type="text" class="input" placeholder="Enter text here..." />
            </div>
            <div>
                <label class="block text-sm font-medium text-primary mb-2">Disabled Input</label>
                <input type="text" class="input" value="Disabled field" disabled />
            </div>
        </div>
    </section>

    <!-- Spacing -->
    <section class="mb-8">
        <h2 class="text-xl font-semibold text-primary mb-4">Spacing</h2>
        <div class="space-y-4">
            <div class="bg-primary p-1 rounded">
                <span class="text-inverse text-xs">p-1 (0.25rem)</span>
            </div>
            <div class="bg-primary p-2 rounded">
                <span class="text-inverse text-xs">p-2 (0.5rem)</span>
            </div>
            <div class="bg-primary p-4 rounded">
                <span class="text-inverse text-xs">p-4 (1rem)</span>
            </div>
            <div class="bg-primary p-8 rounded">
                <span class="text-inverse text-xs">p-8 (2rem)</span>
            </div>
        </div>
    </section>

    <!-- Shadows -->
    <section class="mb-8">
        <h2 class="text-xl font-semibold text-primary mb-4">Shadows</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            <div class="bg-primary p-6 rounded-lg shadow-sm">
                <span class="text-inverse">Shadow Small</span>
            </div>
            <div class="bg-primary p-6 rounded-lg shadow-md">
                <span class="text-inverse">Shadow Medium</span>
            </div>
            <div class="bg-primary p-6 rounded-lg shadow-lg">
                <span class="text-inverse">Shadow Large</span>
            </div>
        </div>
    </section>

    <!-- Animations -->
    <section class="mb-8">
        <h2 class="text-xl font-semibold text-primary mb-4">Animations</h2>
        <div class="flex gap-4">
            <button class="btn btn-primary animate-fade-in">Fade In</button>
            <button class="btn btn-secondary animate-slide-up">Slide Up</button>
            <button class="btn btn-success animate-scale-in">Scale In</button>
        </div>
    </section>
</div>

<style>
.design-demo {
    padding: var(--spacing-8);
    max-width: 1200px;
    margin: 0 auto;
}

.color-swatch {
    min-height: 80px;
    display: flex;
    align-items: center;
    justify-content: center;
}

.grid {
    display: grid;
}

.grid-cols-1 {
    grid-template-columns: repeat(1, minmax(0, 1fr));
}

.grid-cols-2 {
    grid-template-columns: repeat(2, minmax(0, 1fr));
}

@@media (min-width: 768px) {
    .md\:grid-cols-2 {
        grid-template-columns: repeat(2, minmax(0, 1fr));
    }
    
    .md\:grid-cols-3 {
        grid-template-columns: repeat(3, minmax(0, 1fr));
    }
    
    .md\:grid-cols-4 {
        grid-template-columns: repeat(4, minmax(0, 1fr));
    }
}

.gap-4 {
    gap: var(--spacing-4);
}

.gap-6 {
    gap: var(--spacing-6);
}

.space-y-2 > * + * {
    margin-top: var(--spacing-2);
}

.space-y-4 > * + * {
    margin-top: var(--spacing-4);
}

.flex {
    display: flex;
}

.flex-wrap {
    flex-wrap: wrap;
}

.max-w-md {
    max-width: 28rem;
}

.block {
    display: block;
}

.max-w-md {
    max-width: 28rem;
}
</style> 